lfllUmlTestCheckEmail: $(LFLL_UML_TEST_CHECK_EMAIL_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_CHECK_EMAIL_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_CREATE_RANDOM_STRING macro.

lfllUmlTestCreateRandomString: $(LFLL_UML_TEST_CREATE_RANDOM_STRING_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_CREATE_RANDOM_STRING_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_CREATE_NICKNAME macro.

lfllUmlTestCreateNickname: $(LFLL_UML_TEST_CREATE_NICKNAME_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_CREATE_NICKNAME_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_GET_CRYPT_ALGORITHM macro.

lfllUmlTestGetCryptAlgorithm: $(LFLL_UML_TEST_GET_CRYPT_ALGORITHM_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_GET_CRYPT_ALGORITHM_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_ALGORITHM macro.

lfllUmlTestEncodePasswordWithSpecificAlgorithm: $(LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_ALGORITHM_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_ALGORITHM_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_SALT macro.

lfllUmlTestEncodePasswordWithSpecificSalt: $(LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_SALT_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_ENCODE_PASSWORD_WITH_SPECIFIC_SALT_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the LFLL_UML_TEST_CHECK_PASSWORD macro.

lfllUmlTestCheckPassword: $(LFLL_UML_TEST_CHECK_PASSWORD_OBJS)
	$(LD) $(LFLAGS) -o $@@ $(LFLL_UML_TEST_CHECK_PASSWORD_OBJS) $(LFLL_UML_STANDARD_LIBRARIES)





# Target related to the exclusion of all object codes and executable files.

clean:
	rm -f *.o $(ALL)





# Target related to the installation of the library.

install:
	make all
	mkdir $(LFLL_UML_BINARIES_DIRECTORY)
	mkdir $(LFLL_UML_DATA_DIRECTORY)
	mkdir $(LFLL_UML_COOKIES_DIRECTORY)
	mkdir -p $(LFLL_UML_CGIS_DIRECTORY)
	cp $(LFLL_UML_PRIVATE_HTML_DIRECTORY)index_en-us.html $(LFLL_UML_PUBLIC_LFLL_UML_DIRECTORY)
	cp $(LFLL_UML_PRIVATE_HTML_DIRECTORY)index_pt-br.html $(LFLL_UML_PUBLIC_LFLL_UML_DIRECTORY)
	ln -s $(LFLL_UML_PUBLIC_LFLL_UML_DIRECTORY)index_en-us.html $(LFLL_UML_PUBLIC_LFLL_UML_DIRECTORY)index.html
	cp $(LFLL_UML_BINARY_FILES) $(LFLL_UML_BINARIES_DIRECTORY)
	cp $(LFLL_UML_CGI_FILES) $(LFLL_UML_CGIS_DIRECTORY)
	make clean





# Target related to the deinstallation of the library.

deinstall:
	make clean
	rm -rf $(LFLL_UML_PUBLIC_HTML_DIRECTORY)
	rm -rf $(LFLL_UML_BINARIES_DIRECTORY)
	rm -rf $(LFLL_UML_DATA_DIRECTORY)










